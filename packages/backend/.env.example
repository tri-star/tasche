COMPOSE_PROJECT_NAME=tasche_backend
DB_CONTAINER_PORT=5432


# Database
DATABASE_URL=postgresql+asyncpg://tasche:tasche_dev_password@localhost:5432/tasche

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.tasche.example.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret

# Cookie設定
COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# Development
ENABLE_TEST_AUTH=true
LOG_LEVEL=debug

# Test JWT Secret (開発用のみ)
TEST_JWT_SECRET=dev_secret_key_change_in_production_12345678
