{
  "name": "@tasche/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "openapi:update": "orval --config orval.config.ts",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "biome check . && tsc -b --noEmit",
    "format": "biome check --write .",
    "test": "vitest run --passWithNoTests",
    "test:e2e": "E2E_USE_MSW=true playwright test",
    "test:e2e:api": "E2E_USE_MSW=false playwright test",
    "test:e2e:ui": "E2E_USE_MSW=true playwright test --ui",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@faker-js/faker": "^9.7.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.1.0",
    "msw": "^2.11.2",
    "orval": "^7.11.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
